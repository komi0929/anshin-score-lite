\'use client';
import { useState, useRef } from 'react';
import Link from 'next/link';
import { useRouter } from 'next/navigation';

export default function PhotoCapturePage() {
  const [selectedImage, setSelectedImage] = useState<string | null>(null);
  const [isProcessing, setIsProcessing] = useState(false);
  const fileInputRef = useRef<HTMLInputElement>(null);
  const cameraInputRef = useRef<HTMLInputElement>(null);
  const router = useRouter();

  const handleImageSelect = (file: File) => {
    if (file) {
      const reader = new FileReader();
      reader.onload = (e) => {
        setSelectedImage(e.target?.result as string);
      };
      reader.readAsDataURL(file);
    }
  };

  const handleFileSelect = (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0];
    if (file) {
      handleImageSelect(file);
    }
  };

  const handleJudgment = async () => {
    if (!selectedImage) {
      alert('ç”»åƒã‚’é¸æŠã—ã¦ãã ã•ã„');
      return;
    }

    // localStorageã‹ã‚‰ã‚¢ãƒ¬ãƒ«ã‚²ãƒ³æƒ…å ±ã‚’å–å¾—
    const selectedAllergens = JSON.parse(localStorage.getItem('selectedAllergens') || '[]');
    if (selectedAllergens.length === 0) {
      alert('ã‚¢ãƒ¬ãƒ«ã‚²ãƒ³æƒ…å ±ãŒã‚ã‚Šã¾ã›ã‚“ã€‚æœ€åˆã‹ã‚‰ã‚„ã‚Šç›´ã—ã¦ãã ã•ã„ã€‚');
      router.push('/allergen-select');
      return;
    }

    setIsProcessing(true);
    
    try {
      // å®Ÿéš›ã®APIå‘¼ã³å‡ºã—
      const response = await fetch('/api/judge', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          image: selectedImage,
          allergens: selectedAllergens
        })
      });

      const result = await response.json();

      if (!response.ok) {
        throw new Error(result.error || 'APIå‘¼ã³å‡ºã—ã«å¤±æ•—ã—ã¾ã—ãŸ');
      }

      // åˆ¤å®šçµæœã‚’localStorageã«ä¿å­˜
      localStorage.setItem('judgmentResult', JSON.stringify({
        result: result.finalResult,
        message: result.message,
        details: result.details,
        timestamp: result.timestamp
      }));

      // çµæœãƒšãƒ¼ã‚¸ã¸é·ç§»
      router.push('/result');

    } catch (error) {
      console.error('Judgment error:', error);
      
      // ã‚¨ãƒ©ãƒ¼æ™‚ã®ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯
      const fallbackResult = {
        result: 'warning',
        message: 'åˆ¤å®šå‡¦ç†ä¸­ã«ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ',
        details: 'ãƒãƒƒãƒˆãƒ¯ãƒ¼ã‚¯æ¥ç¶šã‚’ç¢ºèªã—ã¦ã€ã‚‚ã†ä¸€åº¦ãŠè©¦ã—ãã ã•ã„ã€‚ã‚¨ãƒ©ãƒ¼ãŒç¶šãå ´åˆã¯ã€åˆ¥ã®ç”»åƒã‚’ãŠè©¦ã—ãã ã•ã„ã€‚',
        timestamp: new Date().toISOString()
      };
      
      localStorage.setItem('judgmentResult', JSON.stringify(fallbackResult));
      router.push('/result');
    } finally {
      setIsProcessing(false);
    }
  };

  return (
    <div className="min-h-screen bg-gray-50">
      {/* ãƒ¢ãƒã‚¤ãƒ«å°‚ç”¨å›ºå®šãƒ˜ãƒƒãƒ€ãƒ¼ */}
      <div className="sticky top-0 bg-white border-b border-gray-200 px-4 py-3 z-10">
        <div className="flex items-center justify-between">
          <Link href="/allergen-select" className="text-orange-500 text-lg">
            â† æˆ»ã‚‹
          </Link>
          <h1 className="text-lg font-semibold text-gray-900">å†™çœŸæ’®å½±</h1>
          <div className="w-12"></div> {/* ãƒãƒ©ãƒ³ã‚¹èª¿æ•´ç”¨ */}
        </div>
      </div>

      <div className="px-4 py-6">
        {/* èª¬æ˜ */}
        <div className="mb-6 text-center">
          <div className="text-4xl mb-3">ğŸ“¸</div>
          <h2 className="text-xl font-bold text-gray-900 mb-2">
            åŸææ–™è¡¨ç¤ºã‚’æ’®å½±
          </h2>
          <p className="text-gray-600 text-sm">
            å•†å“ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã®åŸææ–™åéƒ¨åˆ†ã‚’<br />
            é®®æ˜ã«æ’®å½±ã—ã¦ãã ã•ã„
          </p>
        </div>

        {/* ç”»åƒãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ */}
        {selectedImage ? (
          <div className="mb-6">
            <div className="bg-white rounded-2xl p-4 shadow-sm">
              <img 
                src={selectedImage} 
                alt="é¸æŠã•ã‚ŒãŸç”»åƒ" 
                className="w-full h-64 object-contain rounded-xl border border-gray-200"
              />
              <button
                onClick={() => setSelectedImage(null)}
                className="w-full mt-3 py-2 text-orange-500 text-sm font-medium"
              >
                åˆ¥ã®å†™çœŸã«ã™ã‚‹
              </button>
            </div>
          </div>
        ) : (
          <div className="mb-6">
            <div className="bg-white rounded-2xl p-8 shadow-sm border-2 border-dashed border-gray-300 text-center">
              <div className="text-6xl mb-4 text-gray-400">ğŸ“·</div>
              <p className="text-gray-500 text-sm">
                ç”»åƒã‚’é¸æŠã—ã¦ãã ã•ã„
              </p>
            </div>
          </div>
        )}

        {/* æ’®å½±ãƒœã‚¿ãƒ³ï¼ˆãƒ¢ãƒã‚¤ãƒ«æœ€é©åŒ–ï¼‰ */}
        <div className="space-y-3 mb-8">
          {/* ã‚«ãƒ¡ãƒ©æ’®å½± */}
          <button
            onClick={() => cameraInputRef.current?.click()}
            className="w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-4 rounded-xl flex items-center justify-center space-x-3 transition-all transform active:scale-95"
          >
            <span className="text-xl">ğŸ“¸</span>
            <span>ã‚«ãƒ¡ãƒ©ã§æ’®å½±</span>
          </button>
          
          {/* ã‚®ãƒ£ãƒ©ãƒªãƒ¼ã‹ã‚‰é¸æŠ */}
          <button
            onClick={() => fileInputRef.current?.click()}
            className="w-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-4 rounded-xl flex items-center justify-center space-x-3 transition-all transform active:scale-95"
          >
            <span className="text-xl">ğŸ–¼ï¸</span>
            <span>ã‚®ãƒ£ãƒ©ãƒªãƒ¼ã‹ã‚‰é¸æŠ</span>
          </button>
        </div>

        {/* æ’®å½±ã®ã‚³ãƒ„ */}
        <div className="bg-blue-50 rounded-xl p-4 mb-8">
          <h3 className="font-semibold text-blue-900 mb-2 text-sm">ğŸ“ æ’®å½±ã®ã‚³ãƒ„</h3>
          <ul className="text-blue-800 text-xs space-y-1">
            <li>â€¢ åŸææ–™åéƒ¨åˆ†ã®ã¿ã‚’æ’®å½±</li>
            <li>â€¢ æ–‡å­—ãŒé®®æ˜ã«è¦‹ãˆã‚‹ã‚ˆã†ã«</li>
            <li>â€¢ å½±ã‚„åå°„ãŒãªã„ã‚ˆã†ã«</li>
            <li>â€¢ æ‰‹ãƒ–ãƒ¬ã«æ³¨æ„</li>
          </ul>
        </div>

        {/* åˆ¤å®šãƒœã‚¿ãƒ³ */}
        <div className="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 p-4">
          <button
            onClick={handleJudgment}
            disabled={!selectedImage || isProcessing}
            className={`w-full py-4 rounded-xl font-semibold text-lg transition-all ${
              selectedImage && !isProcessing
                ? 'bg-orange-500 hover:bg-orange-600 text-white transform active:scale-95'
                : 'bg-gray-300 text-gray-500 cursor-not-allowed'
            }`}
          >
            {isProcessing ? (
              <div className="flex items-center justify-center space-x-2">
                <div className="animate-spin rounded-full h-5 w-5 border-b-2 border-white"></div>
                <span>åˆ¤å®šä¸­...</span>
              </div>
            ) : (
              'åˆ¤å®šã™ã‚‹'
            )}
          </button>
        </div>

        {/* éš ã—inputè¦ç´  */}
        <input
          ref={cameraInputRef}
          type="file"
          accept="image/*"
          capture="camera"
          onChange={handleFileSelect}
          className="hidden"
        />
        <input
          ref={fileInputRef}
          type="file"
          accept="image/*"
          onChange={handleFileSelect}
          className="hidden"
        />
      </div>
      
      {/* ãƒœã‚¿ãƒ³ç”¨ã®ä½™ç™½ */}
      <div className="h-20"></div>
    </div>
  );
}